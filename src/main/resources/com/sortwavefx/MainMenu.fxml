<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sortwavefx.MainMenuController">

  <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" spacing="20.0" />
 <ComboBox fx:id="sortingAlgorithmComboBox" layoutX="201.0" layoutY="123.0" prefWidth="200.0" promptText="Select Sorting Algorithm" />
 <Label layoutX="231.0" layoutY="33.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="SortWaveFX" textAlignment="CENTER">
      <textFill>
         <LinearGradient endX="1.0" endY="1.0">
            <stops>
               <Stop>
                  <color>
                     <Color green="0.75" blue="1.0" />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color green="0.19342105090618134" blue="0.8289473652839661" />
                  </color>
               </Stop>
            </stops>
         </LinearGradient>
      </textFill>
   </Label>
 <Button layoutX="245.0" layoutY="257.0" onAction="#onStartButtonClicked" text="Start Visualization" />
 <CheckBox fx:id="optimisationCheckBox" layoutX="222.0" layoutY="192.0" text="Use Optimized Algorithm" />
</AnchorPane>
